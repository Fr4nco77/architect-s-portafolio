---
import Mail from "@assets/icons/Mail.astro";
import MapPin from "@assets/icons/MapPin.astro";
import Phone from "@assets/icons/Phone.astro";
import { Image } from "astro:assets";
---

<section id="contact" class="px-6 py-24">
  <div class="mx-auto max-w-7xl">
    <div class="grid gap-16 lg:grid-cols-2">
      <div class="space-y-8">
        <div>
          <h2 class="font-title mb-4 text-4xl">
            Let's Create Something Extraordinary
          </h2>
          <p class="text-lg leading-relaxed">
            Ready to bring your architectural vision to life? I'd love to
            discuss your project and explore how thoughtful design can transform
            your space and enhance your experience.
          </p>
        </div>

        <div class="space-y-6">
          <div class="flex items-center space-x-4">
            <Mail styles="opacity-80 h-5 w-5" />
            <span>hello@architect.com</span>
          </div>
          <div class="flex items-center space-x-4">
            <Phone styles="opacity-80 h-5 w-5" />
            <span>+1 (555) 123-4567</span>
          </div>
          <div class="flex items-center space-x-4">
            <MapPin styles="opacity-80 h-5 w-5" />
            <span>San Francisco, CA</span>
          </div>
        </div>

        <button
          class="cursor-pointer rounded-md bg-black px-3 py-2 text-white transition-opacity duration-300 ease-in-out hover:opacity-80 dark:bg-white dark:text-black"
          >Schedule a Consultation</button
        >
      </div>

      <div class="overflow-hidden border-0 shadow-xl">
        <!-- <Image
        width={1}
        height={1}
          src="/placeholder.svg?height=400&width=500"
          alt="Studio workspace"
          class="h-[400px] w-full object-cover"
        /> -->
        <div class="h-[400px] w-full bg-gray-500 object-cover"></div>
      </div>
    </div>
  </div>
</section>
