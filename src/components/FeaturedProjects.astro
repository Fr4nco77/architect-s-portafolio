---
import { featuredProjects } from "@assets/dataProjects";
import BigCardPoject from "./BigCardPoject.astro";
---

<section id="projects" class="px-6 py-24">
  <div class="mx-auto max-w-7xl">
    <div class="mb-16">
      <h2 class="font-title mb-4 text-4xl">Featured Projects</h2>
      <p class="max-w-2xl text-lg text-gray-600 dark:text-neutral-400">
        A selection of recent works that demonstrate our commitment to
        innovative design, sustainable practices, and exceptional craftsmanship.
      </p>
    </div>
    <div class="space-y-24">
      {
        featuredProjects.map(
          ({ title, subtitle, description, image }, index) => (
            <BigCardPoject
              title={title}
              subtitle={subtitle}
              description={description}
              image={image}
              imageFirst={index % 2 === 0}
            />
          ),
        )
      }
    </div>
  </div>
</section>
