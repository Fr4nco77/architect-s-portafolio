---
import ArrowRight from "@assets/icons/ArrowRight.astro";
import type { Translate } from "@i18n/utils";
import { Image } from "astro:assets";
import { getRelativeLocaleUrl } from "astro:i18n";

interface Props {
  lang: string;
  translate: Translate;
}

const { lang, translate } = Astro.props;
---

<section class="px-6 pt-24 pb-16">
  <div class="mx-auto max-w-7xl">
    <div class="grid min-h-[80vh] items-center gap-16 lg:grid-cols-2">
      <div class="space-y-8">
        <div class="space-y-4">
          <h1 class="font-title text-4xl leading-tight sm:text-5xl lg:text-7xl">
            {translate("hero.title1")}
            <br />
            {translate("hero.title2")}
          </h1>
          <p
            class="max-w-md text-lg text-gray-600 lg:text-xl dark:text-neutral-400"
          >
            {translate("hero.subtitle")}
          </p>
        </div>
        <a
          href={getRelativeLocaleUrl(lang, "/") + "#projects"}
          class="group transition-color flex w-max items-center rounded-md border border-gray-300 px-3 py-2 duration-300 ease-in-out hover:bg-black hover:text-white dark:border-neutral-900 dark:hover:bg-white dark:hover:text-black"
        >
          {translate("hero.action")}
          <ArrowRight
            styles="ml-2 h-4 w-4 group-hover:translate-x-1 transition-transform"
          />
        </a>
      </div>
      <div class="relative">
        <div class="overflow-hidden rounded shadow-2xl">
          <Image
            src="/hero.webp"
            alt="Featured architectural project"
            width={1}
            height={1}
            loading={"eager"}
            class="h-[600px] w-full object-cover"
          />
        </div>
        <div
          class="absolute -right-4 -bottom-4 rounded bg-[#fef6e4] p-4 dark:bg-neutral-950"
        >
          <p class="font-caption">
            {translate("hero.caption")}
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
