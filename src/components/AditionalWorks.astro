---
import { aditionalWorks } from "@assets/dataProjects";
import SmallCardProject from "./SmallCardProject.astro";
---

<section class="bg-neutral-100 px-6 py-24 dark:bg-neutral-950">
  <div class="mx-auto max-w-7xl">
    <div class="mb-16">
      <h2 class="font-title mb-4 text-4xl">Additional Works</h2>
      <p class="text-lg text-gray-600 dark:text-neutral-400">
        Exploring diverse typologies and scales of architectural intervention.
      </p>
    </div>
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {
        aditionalWorks.map(({ title, year, image }) => (
          <SmallCardProject title={title} year={year} image={image} />
        ))
      }
    </div>
  </div>
</section>
