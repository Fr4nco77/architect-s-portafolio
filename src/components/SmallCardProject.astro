---
import { Image } from "astro:assets";

interface Props {
  id: string;
  title: string;
  subtitle: string;
  image: string;
}

const { id, title, subtitle, image } = Astro.props;
---

<a href={`/${id}`} class="group cursor-pointer">
  <Image
    src={image}
    alt={title}
    width={1}
    height={1}
    loading="lazy"
    class="h-[300px] w-full rounded object-cover transition-transform duration-500 group-hover:scale-105 shadow-xl"
  />
  <div class="p-6">
    <h3 class="font-title mb-1 text-lg">{title}</h3>
    <p class="font-caption">{subtitle}</p>
  </div>
</a>
