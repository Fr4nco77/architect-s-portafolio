---
import type { Translate } from "@i18n/utils";
import { Image } from "astro:assets";

interface Props {
  translate: Translate;
}

const { translate } = Astro.props;
---

<section id="about" class="bg-neutral-100 px-6 py-24 dark:bg-neutral-950">
  <div class="mx-auto max-w-7xl">
    <div class="grid gap-16 lg:grid-cols-3">
      <div class="space-y-8 lg:col-span-2">
        <h2 class="font-title text-4xl">{translate("about.title")}</h2>
        <div class="space-y-6 text-lg leading-relaxed">
          <p>
            {translate("about.p1")}
          </p>
          <p>
            {translate("about.p2")}
          </p>
        </div>
        <div class="grid gap-8 pt-8 text-center md:grid-cols-3 md:text-start">
          <div>
            <h3 class="font-title mb-2 text-2xl">50+</h3>
            <p class="font-caption">{translate("about.projects")}</p>
          </div>
          <div>
            <h3 class="font-title mb-2 text-2xl">15</h3>
            <p class="font-caption">{translate("about.awards")}</p>
          </div>
          <div>
            <h3 class="font-title mb-2 text-2xl">12</h3>
            <p class="font-caption">{translate("about.years")}</p>
          </div>
        </div>
      </div>
      <div class="space-y-4">
        <div class="overflow-hidden rounded shadow-xl">
          <Image
            src="/about.webp"
            alt="Architect portrait"
            width={1}
            height={1}
            loading={"lazy"}
            class="h-[400px] w-full object-cover"
          />
        </div>
        <p class="font-caption text-center">{translate("about.caption")}</p>
      </div>
    </div>
  </div>
</section>
